#!/bin/sh /etc/rc.common

START=99
STOP=10

start() {
	state=`pgrep -f "/usr/bin/serverchan"`
	if [ ! -z "$state" ]; then
		restart
	else
		/usr/bin/serverchan &
	fi
	echo "serverchan is starting now ..."
}

stop() {
	kill -9 `pgrep -f "/usr/bin/serverchan"` 2>/dev/null
	echo "serverchan exit ..."
}

restart(){
	stop
	sleep 1
	start
	echo "restarted."
}
